  <% if player_resource.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(player_resource.errors.count, "error") %> prohibited this player_resource from being saved:</h2>

      <ul>
        <% player_resource.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
