<div id="<%= dom_id funding %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Construction:</strong>
    <%= funding.construction_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Funding resource type:</strong>
    <%= funding.funding_resource_type %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Funded resource ammount:</strong>
    <%= funding.funded_resource_ammount %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this funding", funding, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this funding', edit_funding_path(funding), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
