<div id="<%= dom_id construction %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Player:</strong>
    <%= construction.player_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Construction type:</strong>
    <%= construction.construction_type %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this construction", construction, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this construction', edit_construction_path(construction), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
