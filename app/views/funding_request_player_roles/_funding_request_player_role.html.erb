<div id="<%= dom_id funding_request_player_role %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Player:</strong>
    <%= funding_request_player_role.player_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Funding request:</strong>
    <%= funding_request_player_role.funding_request_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Player role:</strong>
    <%= funding_request_player_role.player_role %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this funding request player role", funding_request_player_role, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this funding request player role', edit_funding_request_player_role_path(funding_request_player_role), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
