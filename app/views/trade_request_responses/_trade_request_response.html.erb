<div id="<%= dom_id trade_request_response %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Trade player role:</strong>
    <%= trade_request_response.trade_player_role_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Trade request:</strong>
    <%= trade_request_response.trade_request_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Trade response type:</strong>
    <%= trade_request_response.trade_response_type %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this trade request response", trade_request_response, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this trade request response', edit_trade_request_response_path(trade_request_response), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
