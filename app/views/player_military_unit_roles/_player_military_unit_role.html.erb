<div id="<%= dom_id player_military_unit_role %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Player:</strong>
    <%= player_military_unit_role.player_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Military unit:</strong>
    <%= player_military_unit_role.military_unit_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Military unit role type:</strong>
    <%= player_military_unit_role.military_unit_role_type %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this player military unit role", player_military_unit_role, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this player military unit role', edit_player_military_unit_role_path(player_military_unit_role), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
