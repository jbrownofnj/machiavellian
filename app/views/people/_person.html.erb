<div id="<%= dom_id person %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Person email:</strong>
    <%= person.person_email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Person password:</strong>
    <%= person.person_password %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Person email confirmation token:</strong>
    <%= person.person_email_confirmation_token %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Person email confirmed:</strong>
    <%= person.person_email_confirmed %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this person", person, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this person', edit_person_path(person), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
