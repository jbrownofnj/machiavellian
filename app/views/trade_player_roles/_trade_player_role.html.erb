<div id="<%= dom_id trade_player_role %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Player:</strong>
    <%= trade_player_role.player_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Trade request resource:</strong>
    <%= trade_player_role.trade_request_resource_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Role type:</strong>
    <%= trade_player_role.role_type %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this trade player role", trade_player_role, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this trade player role', edit_trade_player_role_path(trade_player_role), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
