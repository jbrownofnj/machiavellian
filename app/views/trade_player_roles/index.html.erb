<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Trade player roles</h1>
    <%= link_to 'New trade player role', new_trade_player_role_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="trade_player_roles" class="min-w-full">
    <%= render @trade_player_roles %>
  </div>
</div>
